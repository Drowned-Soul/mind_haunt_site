{
  "compilerOptions": {
    "target": "ES6",                   // Target de saída
    "module": "ESNext",                // Módulos modernos
    "lib": ["DOM", "ESNext"],          // Suporte ao DOM e novas features do ECMAScript
    "jsx": "react-jsx",                // Configuração para JSX (React 17+)
    "strict": true,                    // Ativa verificações estritas
    "esModuleInterop": true,           // Compatibilidade com módulos ES6
    "moduleResolution": "Node",        // Resolve módulos no padrão Node.js
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true               // Ignora verificação de bibliotecas externas
  },
  "include": ["src/**/*", "App.js", "main.js", "components", "App.tsx", "main.tsx", "vite-env.d.ts"],             // Inclui todos os arquivos TypeScript na pasta src
  "exclude": ["node_modules"]          // Exclui a pasta node_modules
}
